<ul id="slides">
  <% @users.each_with_index do |user, i| %>
  <li class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
    <div class="image-carousel" style="background-image: url('<%= url_for user.images.first %>')">
    </div>
    <span class="user-details">
      <span class="user-name"><%= user.first_name %></span>, 31<br />
      <i class="fa fa-graduation-cap mr-2"></i> Physician<br>
      <i class="fa fa-map-marker mr-3"></i> Dallas
    </span>
  </li>
  <% end %>
</ul>

<div id="slide-controls">
  <span id="decline"><i class="fa fa-times-circle fa-2x" style="color: #555; margin-right: 5px;"></i></span>
  <span id="approve"><i class="fa fa-heart fa-2x" style="color: red; margin-left: 5px;"></i></span>
</div>
